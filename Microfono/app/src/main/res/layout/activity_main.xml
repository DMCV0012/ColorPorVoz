<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aurora_gradient"
    tools:context=".MainActivity">

    <!-- Texto que muestra el resultado del reconocimiento de voz -->
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/circular_shape"
        android:contentDescription="Color"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/btnGrabar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />

    <Button
        android:id="@+id/btnGrabar"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/circular_button"
        android:contentDescription="Presione para hablar"
        android:text=""
        android:drawableLeft="@drawable/microfono"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Texto que dice "Color de Código" -->
    <TextView
        android:id="@+id/tvColorCodigoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODIGO: "
        android:textSize="25sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvResultado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCodigoColor"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Texto que muestra el código del color -->
    <TextView
        android:id="@+id/tvCodigoColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:contentDescription="Codigo de Color"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvResultado"
        app:layout_constraintStart_toEndOf="@id/tvColorCodigoLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
